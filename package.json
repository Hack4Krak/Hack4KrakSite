{
  "name": "hack4krak",
  "private": true,
  "type": "module",
  "scripts": {
    "frontend:build": "cd frontend/ && bun run build",
    "frontend:install": "cd frontend/ && bun install",
    "frontend:test": "cd frontend/ && bun run test",
    "frontend:e2e": "cd frontend/ && bun run e2e",
    "frontend:typecheck": "cd frontend/ && bun typecheck",
    "frontend:dev": "cd frontend/ && bun dev",
    "frontend:lint": "cd frontend/ && bun lint",
    "frontend:lint:fix": "cd frontend/ && bun lint:fix",
    "backend:build": "cd backend/ && bun run build",
    "backend:install": "cd backend/ && bun install",
    "backend:test": "cd backend/ && bun run test",
    "backend:test:full": "cd backend/ && bun test:full",
    "backend:dev": "cd backend/ && bun dev",
    "backend:lint": "cd backend/ && bun lint",
    "backend:lint:fix": "cd backend/ && bun lint:fix",
    "backend:openapi-cli": "cd backend/ && bun openapi-cli",
    "test": "bun --filter '*' test",
    "dev": "bun --filter '*' dev",
    "lint": "bun --filter '*' lint",
    "lint:fix": "bun --filter '*' lint:fix",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.7"
  },
  "workspaces": [
    "frontend",
    "backend"
  ],
  "engines": {
    "node": ">=22.5.1"
  },
  "resolutions": {
    "@nuxt/fonts": "0.11.4"
  }
}
